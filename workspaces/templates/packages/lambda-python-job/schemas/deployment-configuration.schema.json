{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ThisDeploymentConfiguration",
  "definitions": {
    "ThisDeploymentConfiguration": {
      "type": "object",
      "properties": {
        "lambdaName": {
          "type": "string",
          "description": "The name of the lambda.",
          "title": "Lambda Name",
          "pattern": "^[A-Za-z0-9-_]*$"
        },
        "schedule": {
          "$ref": "#/definitions/LambdaSchedule"
        }
      },
      "required": [
        "lambdaName"
      ]
    },
    "LambdaSchedule": {
      "type": "string",
      "description": "Optional schedule in which the lambda is triggered. Example: \"rate(1 minute)\". For more information see <a href=\"https://docs.aws.amazon.com/eventbridge/latest/userguide/eb-scheduled-rule-pattern.html#eb-rate-expressions\">AWS Schedule Pattern documentation</a>",
      "title": "LambdaSchedule"
    }
  }
}