{
  "extends": "./tsconfig.json",
  "ts-node": {
    "files": true
  },
  "files": [
    "./typings/declarations.d.ts"
  ],
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./typings/**/*"
  ],
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "declarationMap": false,
    "jsx": "react",
    "isolatedModules": false,
    "module": "CommonJS",
    "target": "es5",
    "types": [
      "node",
      "dom"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  }
}
