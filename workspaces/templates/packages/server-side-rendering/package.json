{
  "name": "@goldstack/server-side-rendering",
  "version": "0.1.0",
  "description": "Template for server-side rendering",
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/module.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build-lambda": "template build",
    "build-lambda-ts": "yarn template-ts build",
    "clean": "rimraf ./dist && rimraf ./distLambda",
    "compile": "tsc --build",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn build-lambda \"$@\" && template deploy \"$@\"",
    "deploy-ts": "yarn build-lambda-ts \"$@\" && yarn template-ts deploy \"$@\"",
    "infra": "template infra \"$@\"",
    "start": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node scripts/start.ts",
    "template": "template",
    "template-ts": "ts-node --project tsconfig.local.json scripts/template.ts",
    "test": "yarn test-ci --watch",
    "test-ci": "TEST_SERVER_PORT=50321 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=jest.config.js --runInBand",
    "watch": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node-dev --project tsconfig.local.json --respawn ./scripts/start.ts",
    "watch-test": "ts-node --swc --transpileOnly --files --project tsconfig.local.json ./src/dummy.tsx"
  },
  "dependencies": {
    "@goldstack/template-ssr": "0.1.2",
    "@goldstack/utils-esbuild": "0.4.3",
    "date-fns": "^2.28.0",
    "jest-transform-stub": "^2.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@goldstack/template-ssr-cli": "0.1.2",
    "@goldstack/utils-aws-http-api-local": "0.1.34",
    "@jest-mock/express": "^1.4.5",
    "@swc/core": "^1.2.218",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/aws-lambda": "^8.10.88",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/node-fetch": "2",
    "@types/react": "^18.0.15",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/testing-library__react": "^10.2.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.11",
    "esbuild": "^0.14.48",
    "find-free-port": "^2.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.3",
    "node-fetch": "2.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4",
    "typescript-plugin-css-modules": "^3.4.0"
  }
}
