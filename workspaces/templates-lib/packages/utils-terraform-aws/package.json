{
  "name": "@goldstack/utils-terraform-aws",
  "version": "0.4.5",
  "description": "Easily deploy Terraform IaC with npm package scripts",
  "keywords": [
    "goldstack",
    "utility",
    "terraform",
    "aws",
    "IaC"
  ],
  "homepage": "https://goldstack.party",
  "bugs": {
    "url": "https://github.com/goldstack/goldstack/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goldstack/goldstack.git"
  },
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/utilsTerraformAws.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "prepublishOnly": "yarn run build",
    "publish": "utils-git changed --exec \"yarn npm publish $@\"",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "version:apply": "utils-git changed --exec \"yarn version $@ && yarn version apply\"",
    "version:apply:force": "yarn version $@ && yarn version apply"
  },
  "dependencies": {
    "@goldstack/infra-aws": "0.4.5",
    "@goldstack/utils-config": "0.4.2",
    "@goldstack/utils-log": "0.3.2",
    "@goldstack/utils-package": "0.4.2",
    "@goldstack/utils-sh": "0.5.2",
    "@goldstack/utils-terraform": "0.4.5",
    "aws-sdk": "^2.1222.0"
  },
  "devDependencies": {
    "@goldstack/utils-git": "0.2.2",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.13",
    "jest": "^28.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "main": "dist/src/utilsTerraformAws.js"
  }
}
