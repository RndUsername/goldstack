{
  "name": "@goldstack/template-ssr-server-compile-bundle",
  "version": "0.3.20",
  "description": "Utility for compiling client side bundles for SSR application",
  "keywords": [
    "goldstack",
    "utility",
    "infrastructure",
    "ssr",
    "aws"
  ],
  "homepage": "https://goldstack.party",
  "bugs": {
    "url": "https://github.com/goldstack/goldstack/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goldstack/goldstack.git"
  },
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/templateSSRServerCompileBundle.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "prepublishOnly": "yarn run build",
    "publish": "utils-git changed --exec \"yarn npm publish $@\"",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "version:apply": "utils-git changed --exec \"yarn version $@ && yarn version apply\"",
    "version:apply:force": "yarn version $@ && yarn version apply"
  },
  "dependencies": {
    "@goldstack/infra": "0.4.9",
    "@goldstack/infra-aws": "0.4.12",
    "@goldstack/utils-aws-lambda": "0.3.16",
    "@goldstack/utils-esbuild": "0.5.9",
    "@goldstack/utils-package": "0.4.9",
    "@goldstack/utils-package-config-embedded": "0.5.10",
    "@goldstack/utils-sh": "0.5.9",
    "@goldstack/utils-template": "0.4.9",
    "@goldstack/utils-terraform": "0.4.13",
    "@types/aws-lambda": "^8.10.88",
    "esbuild": "^0.17.18",
    "lambda-compression": "0.2.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "source-map-support": "^0.5.21",
    "static-file-mapper-build": "0.3.11"
  },
  "devDependencies": {
    "@goldstack/utils-docs-cli": "0.3.11",
    "@goldstack/utils-git": "0.2.9",
    "@goldstack/utils-package-config-generate": "0.3.9",
    "@swc/core": "^1.3.55",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.15",
    "@types/sha256": "^0.2.0",
    "@types/yargs": "^17.0.10",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "main": "dist/src/templateSSRServerCompileBundle.js"
  }
}
