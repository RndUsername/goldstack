{
  "name": "@goldstack/template-build",
  "version": "0.1.0",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "src/templateBuild.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile-watch",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "compile-watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "prepublishOnly": "yarn run build",
    "test": "jest --config=./jest.config.js --watch",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "@goldstack/prepare-template": "0.1.0",
    "@goldstack/prepare-yarn-pnp-monorepo": "0.1.1",
    "@goldstack/template-repository": "0.1.0",
    "@goldstack/utils-sh": "0.4.33",
    "@goldstack/utils-template": "0.3.37",
    "aws-sdk": "2.1055.0"
  },
  "devDependencies": {
    "@types/archiver": "^3.1.0",
    "@types/jest": "^28.1.8",
    "@types/mock-aws-s3": "^2.6.3",
    "@types/node": "^18.7.13",
    "jest": "^28.1.0",
    "mock-aws-s3": "^4.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.7.4"
  }
}
